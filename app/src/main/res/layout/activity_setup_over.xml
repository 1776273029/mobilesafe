<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:text="手机防盗"
        style="@style/TitleStytle"/>
    <RelativeLayout
        android:padding="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:textColor="#000"
            android:text="安全号码"
            android:textSize="18sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:textColor="#000"
            android:id="@+id/tv_safe_num"
            android:textSize="18sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"/>
        <ImageView
            android:layout_below="@id/tv_safe_num"
            android:background="@drawable/listview_divider"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <RelativeLayout
        android:padding="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textColor="#000"
            android:layout_centerVertical="true"
            android:text="防盗保护是否开启"
            android:textSize="18sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:id="@+id/iv_islock"
            android:src="@drawable/lock"
            android:layout_alignParentRight="true"
            android:layout_width="25dp"
            android:layout_height="25dp" />
        <ImageView
            android:layout_below="@id/iv_islock"
            android:background="@drawable/listview_divider"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <!--TextView默认没有点击事件，Java代码中需要给此控件添加一个点击事件-->
    <TextView
        android:id="@+id/tv_reset_setup"
        android:padding="5dp"
        android:textSize="18sp"
        android:textColor="#000"
        android:background="@drawable/selector_mobilesafe_reset_setup_bg"
        android:text="重新进入设置向导"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:background="#ccc"
        android:padding="5dp"
        android:text="功能简介"
        android:textSize="18sp"
        android:textColor="#000"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


    <TextView
        android:text="GPS追踪：#*location*#"
        style="@style/StarTextView" />
    <TextView
        android:text="播放警报音乐：#*alarm*#"
        style="@style/StarTextView" />
    <TextView
        android:text="数据销毁：#*wipedata*#"
        style="@style/StarTextView" />
    <TextView
        android:text="远程锁屏：#*lockscreen*#"
        style="@style/StarTextView" />

</LinearLayout>
